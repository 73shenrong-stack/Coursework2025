<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.MainMenuController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #2C3E50;">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="TETRIS JFX"
           style="-fx-font-size: 44px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Arial Black';">
        <VBox.margin>
            <Insets bottom="30"/>
        </VBox.margin>
    </Label>

    <Button fx:id="newGameButton"
            text="NEW GAME"
            onAction="#onNewGame"
            prefWidth="200"
            prefHeight="50"
            style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 10;">
        <VBox.margin>
            <Insets top="10" bottom="10"/>
        </VBox.margin>
    </Button>

    <Button fx:id="exitButton"
            text="EXIT"
            onAction="#onExit"
            prefWidth="200"
            prefHeight="50"
            style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 10;">
        <VBox.margin>
            <Insets top="10" bottom="10"/>
        </VBox.margin>
    </Button>

</VBox>